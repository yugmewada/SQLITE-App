<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to SQLite App"
        android:gravity="center"
        android:textColor="#F44336"
        android:textSize="30dp"
        android:paddingVertical="25dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold">
    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageSQL"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/sql_img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:background="@color/white">
        </ImageView>

    <Button
        android:layout_below="@+id/imageSQL"
        android:id="@+id/data_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#8BC34A"
        android:text="click to add data">
    </Button>

    <Button
        android:id="@+id/data_view"
        android:backgroundTint="#2196F3"
        android:layout_below="@+id/data_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click to view data">
    </Button>
</RelativeLayout>
</RelativeLayout>